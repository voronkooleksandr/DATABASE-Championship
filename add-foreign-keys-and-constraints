REFERENCES Positions (id)
ON DELETE CASCADE;

ALTER TABLE Players
ADD id_team INT NOT NULL
CONSTRAINT FK_Players_id_team
FOREIGN KEY (id_team)
REFERENCES Teams (id)
ON DELETE CASCADE;

ALTER TABLE Games
